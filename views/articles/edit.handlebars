<section class="section articles-add">
  <div class="container is-fullhd">
    <form action="/articles/edit/{{article.id}}" method="POST" enctype="multipart/form-data">
      <div class="field">
        <label class="label">Titre de l'article</label>
        <div class="control">
          <input class="input" type="text" name="title" placeholder="Titre" value="{{article.title}}">
        </div>
      </div>

      <div class="field">
        <label class="label">Contenu</label>
        <div class="control">
          <textarea class="textarea" name="content" id="editor1" >
            {{{article.content}}}
            </textarea>
            <script>
                CKEDITOR.replace( 'editor1' );
            </script>
        </div>
      </div>

      <div class="field">
        <label class="label">Auteur</label>
        <div class="control">
          <input class="input" type="text" name="author" placeholder="Auteur" value="{{article.author}}">
        </div>
      </div>

       <div class="file">
        <label class="file-label">
          <input class="file-input" type="file" name="image" value="{{article.image}}">
          <span class="file-cta">
            <span class="file-icon"> 
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choisissez une image...
            </span>
          </span>
        </label>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button class="button is-link">Enregister</button>
        </div>
    </form>
    <form action="/actus" method="GET" enctype="multipart/form-data">
            <div class="control">
          <button class="button is-text">Annuler</button>
        </div>
      </div>
    </form>
  </div>
</section>